@section scripts {
    @Scripts.Render("~/bundles/app")
}



<div class="page-header">
    <h1>Katrines kælder</h1>
</div>

<div class="row">
    <!-- Prouct tabs view-->
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Product Tabs</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: ProductTabs">
                    <li>
                        <strong><span data-bind="text: Name"></span></strong>: <span data-bind="text: Id"></span>
                        @*<small><a href="#" data-bind="click: $parent.getBookDetail">Details</a></small>*@
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error">
            <p data-bind="text: error"></p>
        </div>
    </div>

    <!--Add Product-->
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Product</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addProduct">
                    <div class="form-group">
                        <label for="inputAuthor" class="col-sm-4 control-label">Product Tab</label>
                        <div class="col-sm-8">
                            <select data-bind="options: ProductTabs, optionsText: 'Name', value: newProduct"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newProduct">
                        <label for="inputName" class="col-sm-4 control-label">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputName" data-bind="value:Name" />
                        </div>

                        <label for="inputPrice" class="col-sm-4 control-label">Price (kr)</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="inputPrice" data-bind="value:Price" />
                        </div>

                        <label for="inputSaleable" class="col-sm-4 control-label">Saleable</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputSaleable" data-bind="value:Saleable"/>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>

<style>
    .form-horizontal .control-label{
    /* text-align:right; */
    text-align:left;
}
</style>