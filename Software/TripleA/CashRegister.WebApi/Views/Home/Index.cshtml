@section scripts {
    @Scripts.Render("~/bundles/app")
}



<div class="page-header">
    <h1>Katrines kælder</h1>
</div>

<div class="row">
    <!-- Prouct tabs view-->
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Product Tabs</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: ProductTabs">
                    <li>
                        <small><a href="#" data-bind="click: $parent.deleteProductTab">Delete</a></small>
                        <strong><span data-bind="text: Name"></span></strong>: <span data-bind="text: Id"></span>
                        <small><a href="#" data-bind="click: $parent.getProductTabsDetails">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error">
            <p data-bind="text: error"></p>
        </div>
    </div>

    <!-- ko if:ProductTabsDetails() -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>Id</td><td data-bind="text: ProductTabsDetails().Id"></td></tr>
                <tr><td>Name</td><td data-bind="text: ProductTabsDetails().Name"></td></tr>
                <tr><td>Active</td><td data-bind="text: ProductTabsDetails().Active"></td></tr>
                <tr><td>Color</td><td data-bind="text: ProductTabsDetails().Color"></td></tr>
                <tr><td>Priority</td><td data-bind="text: ProductTabsDetails().Priority"></td></tr>
            </table>
        </div>
    </div>
    <!-- /ko -->

    <!--Add Product-->
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add ProductTab</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addProductTab">

                    <div class="form-group" data-bind="with: newProductTab">
                        <label for="inputName" class="col-sm-4 control-label">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputName" data-bind="value:Name"/>
                        </div>

                        <label for="inputActive" class="col-sm-4 control-label">Active</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputActive" data-bind="value:Active" />
                        </div>

                        <label for="inputColor" class="col-sm-4 control-label">Color</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputColor" data-bind="value:Color"/>
                        </div>

                        <label for="inputPriority" class="col-sm-4 control-label">Priority</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputPriority" data-bind="value:Priority" />
                        </div>



                        @*<label for="inputPrice" class="col-sm-4 control-label">Price (kr)</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="inputPrice" data-bind="value:Price"/>
                        </div>

                        <label for="inputSaleable" class="col-sm-4 control-label">Saleable</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputSaleable" data-bind="value:Saleable"/>
                        </div>*@
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>

<style>
    .form-horizontal .control-label{
    /* text-align:right; */
    text-align:left;
}
</style>
