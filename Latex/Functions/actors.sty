\usepackage{booktabs}
\usepackage{multirow}
\usepackage{longtable}

%-------------------------------------------------------------------------------
%                Definition of the use case environment
%-------------------------------------------------------------------------------
\newenvironment{actor}[1]
{
	\def\actorname{#1}
	\def\actorwidth{8.9cm}

	%-------------------------------------------------------------------------------
	% \title command: add the title of the use case
	%-------------------------------------------------------------------------------
	\renewcommand\title[1]{
		\hline \\
		[-1.5ex]
		Akt√∏rnavn & \textbf{##1}\\
		[1ex] \hline \\
		[-1.5ex]
		\def\@currentlabelname{##1}
		\label{actor_#1}
	}
	
	%-------------------------------------------------------------------------------
	% \field command: add a property of the use case
	%-------------------------------------------------------------------------------
	\newcommand\field[2]{
		\textit{##1} &##2\\
		[1ex] \hline \\
		[-1.3ex]
	}
	
	
	
	\subsection{\actorname}
	\begin{longtable}{lp{\actorwidth}}
	\title{\actorname}
}
{
\end{longtable}
}
