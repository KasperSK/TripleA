\usepackage{booktabs}
\usepackage{multirow}
\usepackage{longtable}

%-------------------------------------------------------------------------------
%                Definition of the use case environment
%-------------------------------------------------------------------------------
\newenvironment{usecase}[1]
{
	\def\usecase_width{8.9cm}
	
	%-------------------------------------------------------------------------------
	% \title command: add the title of the use case
	%-------------------------------------------------------------------------------
	\renewcommand\title[1]{
		\hline \\
		[-1.5ex]
		 & \textbf{##1}\\
		[1ex] \hline \\
		[-1.5ex]
		\def\@currentlabelname{##1}
		\label{usecase_#1}
	}
	
	%-------------------------------------------------------------------------------
	% \field command: add a property of the use case
	%-------------------------------------------------------------------------------
	\newcommand\field[2]{
		\textit{##1} &##2\\
		[1ex] \hline \\
		[-1.3ex]
	}
	
	
	%-------------------------------------------------------------------------------
	% \scenario command: add the main (or alternative) scenario
	% of the use case
	%-------------------------------------------------------------------------------
	\newcommand\scenario[2]{ 
		\multicolumn{2}{l}{\textit{##1}} \\
		\multicolumn{2}{l}{
			\begin{minipage}[t]{13.2cm}
				\begin{enumerate}
					##2
				\end{enumerate}
				\vspace{1.3ex}
			\end{minipage}
		} \\
		[1ex] \hline \\
		[-1.5ex]
	}
	
	\begin{longtable}{lp{\usecase_width}}
}
{\end{longtable}}
